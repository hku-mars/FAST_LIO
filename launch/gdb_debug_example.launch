<launch>

  	<arg name="rviz" default="true" />

  	<node pkg="fast_lio" exec="fastlio_mapping" name="laserMapping" output="screen" required="true" launch-prefix="gdb -ex run --args">
		<param name="imu_topic" value="/livox/imu" />
		<param name="map_file_path" value=" " />
		<param name="max_iteration" value="4" />
		<param name="dense_map_enable" value="true" />
		<param name="fov_degree" value="75.0" />
		<param name="filter_size_corner" value="0.2" />
		<param name="filter_size_surf" value="0.2" />
		<param name="filter_size_map" value="0.5" />
		<param name="runtime_pos_log_enable" value="true" />
		<param name="cube_side_length" value="2000.0" />
  	</node>

	<!-- <group if="$(var rviz)">
		<node launch-prefix="nice" pkg="rviz2" exec="rviz2" />
	</group> -->

</launch>
